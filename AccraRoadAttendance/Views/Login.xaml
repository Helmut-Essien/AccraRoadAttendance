<Window
    x:Class="AccraRoadAttendance.Views.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AccraRoadAttendance.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Login"
    Width="450"
    Height="760"
    AllowsTransparency="True"
    Background="{x:Null}"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <materialDesign:Card
        Margin="25"
        materialDesign:ElevationAssist.Elevation="Dp4"
        Background="{DynamicResource MaterialDesignPaper}"
        UniformCornerRadius="15">
        <materialDesign:DialogHost x:Name="DialogHost" CloseOnClickAway="True">
            <StackPanel>
                <materialDesign:PopupBox
                    Height="25"
                    Margin="0,20,20,0"
                    HorizontalAlignment="Right"
                    PlacementMode="BottomAndAlignRightEdges"
                    StaysOpen="False">
                    <StackPanel>
                        <StackPanel
                            Margin="16,10,0,6"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBlock VerticalAlignment="Center" Text="Dark Mode" />
                            <ToggleButton
                                x:Name="themeToggle"
                                Margin="12,0,8,0"
                                Click="toggleTheme"
                                Cursor="Hand"
                                IsChecked="{Binding IsDarkTheme}"
                                ToolTip="Enable Dark Mode" />
                        </StackPanel>
                        <Button
                            Margin="0,8,0,0"
                            Content="Help Me"
                            ToolTip="Having Trouble Logging?" />
                        <Button
                            x:Name="btn_exit"
                            Click="exitApp"
                            Content="Exit Application"
                            ToolTip="Close Application" />
                    </StackPanel>
                </materialDesign:PopupBox>

                <Image
                    x:Name="logoImage"
                    Height="150"
                    Margin="0,60,0,5"
                    Source="pack://application:,,,/AccraRoadAttendance;component/AppImages/CLogoc.png" />
                <TextBlock
                    Margin="0,25,0,5"
                    HorizontalAlignment="Center"
                    FontSize="28"
                    FontWeight="Bold"
                    Text="Welcome Back!" />
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="17"
                    FontWeight="SemiBold"
                    Text="Log in to your existing account" />
                <TextBox
                    x:Name="txtUsername"
                    Width="300"
                    Margin="0,50,0,0"
                    materialDesign:HintAssist.Hint="Enter Username"
                    BorderBrush="{DynamicResource MaterialDesignDivider}"
                    BorderThickness="2"
                    FontSize="18"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}" />
                <PasswordBox
                    x:Name="txtPassword"
                    Width="300"
                    Margin="0,20,0,0"
                    materialDesign:HintAssist.Hint="Enter Password"
                    BorderBrush="{DynamicResource MaterialDesignDivider}"
                    BorderThickness="2"
                    FontSize="18"
                    Style="{StaticResource MaterialDesignOutlinedPasswordBox}" />
                <Button
                    x:Name="loginBtn"
                    Width="300"
                    Height="53"
                    Margin="0,20,0,0"
                    materialDesign:ButtonAssist.CornerRadius="10"
                    materialDesign:ElevationAssist.Elevation="Dp0"
                    Content="LOG IN"
                    FontSize="18"
                    Foreground="White"
                    Style="{StaticResource MaterialDesignFlatMidBgButton}" />
                <Button
                    x:Name="signupBtn"
                    Margin="0,20,0,0"
                    materialDesign:ButtonAssist.CornerRadius="10"
                    materialDesign:ElevationAssist.Elevation="Dp0"
                    Content="Create Account  "
                    FontSize="18"
                    Style="{StaticResource MaterialDesignFlatButton}" />
            </StackPanel>
        </materialDesign:DialogHost>
    </materialDesign:Card>
</Window>
