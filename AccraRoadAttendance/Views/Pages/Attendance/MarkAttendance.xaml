<UserControl
    x:Class="AccraRoadAttendance.Views.Pages.Attendance.MarkAttendance"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="10,2" Background="{DynamicResource MaterialDesignPaper}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <TextBlock
            Grid.Row="0"
            Margin="0,20,0,0"
            HorizontalAlignment="Left"
            FontSize="36"
            FontWeight="Bold"
            Foreground="{DynamicResource MaterialDesignBody}"
            Text="Mark Attendance" />

        <!--  Service Information & Search  -->
        <Grid Grid.Row="1" Margin="0,10,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <ComboBox
                x:Name="ServiceTypeComboBox"
                Grid.Column="0"
                Margin="0,0,10,0"
                materialDesign:HintAssist.Hint="Service Type"
                ItemsSource="{Binding Source={StaticResource ServiceTypeValues}}"
                Style="{StaticResource MaterialDesignOutlinedComboBox}" />

            <DatePicker
                x:Name="ServiceDatePicker"
                Grid.Column="1"
                Margin="0,0,10,0"
                materialDesign:HintAssist.Hint="Service Date"
                Style="{StaticResource MaterialDesignOutlinedDatePicker}" />

            <TextBox
                x:Name="SearchBox"
                Grid.Column="2"
                Width="300"
                materialDesign:HintAssist.Hint="Search Members"
                materialDesign:TextFieldAssist.HasTrailingIcon="True"
                materialDesign:TextFieldAssist.TrailingIcon="{x:Static materialDesign:PackIconKind.Magnify}"
                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                TextChanged="SearchBox_TextChanged" />
        </Grid>

        <!--  Attendance List  -->
        <materialDesign:Card
            Grid.Row="2"
            Margin="0,0,0,10"
            Padding="5"
            materialDesign:ElevationAssist.Elevation="Dp4">
            <DataGrid
                x:Name="AttendanceDataGrid"
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                HeadersVisibility="Column"
                IsReadOnly="False"
                Style="{StaticResource DataGridStyle1}">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Width="Auto" Header="Picture">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border
                                    Width="60"
                                    Height="60"
                                    VerticalAlignment="Center"
                                    materialDesign:ElevationAssist.Elevation="Dp2"
                                    Background="{DynamicResource MaterialDesignPaper}"
                                    CornerRadius="30">

                                    <Image
                                        Width="54"
                                        Height="54"
                                        Margin="3"
                                        Source="{Binding Member.PicturePath}"
                                        Stretch="UniformToFill" />
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn
                        Width="Auto"
                        Binding="{Binding Member.FirstName}"
                        ElementStyle="{StaticResource VerticallyCenteredCellStyle}"
                        Header="First Name"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Width="Auto"
                        Binding="{Binding Member.LastName}"
                        ElementStyle="{StaticResource VerticallyCenteredCellStyle}"
                        Header="Last Name"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Width="Auto"
                        Binding="{Binding Member.Sex}"
                        ElementStyle="{StaticResource VerticallyCenteredCellStyle}"
                        Header="Gender"
                        IsReadOnly="True" />
                    <DataGridComboBoxColumn
                        Width="Auto"
                        EditingElementStyle="{StaticResource CenteredComboBoxEditingStyle}"
                        ElementStyle="{StaticResource VerticallyCenteredComboBoxStyle}"
                        Header="Status"
                        ItemsSource="{Binding Source={StaticResource AttendanceStatusValues}}"
                        SelectedItemBinding="{Binding Status, UpdateSourceTrigger=PropertyChanged}" />
                </DataGrid.Columns>
            </DataGrid>
        </materialDesign:Card>

        <!--  Summary and Save  -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                FontWeight="SemiBold"
                Text="Present: " />
            <TextBlock
                x:Name="TotalPresentText"
                Grid.Column="1"
                Margin="0,0,20,0"
                Text="0" />

            <Button
                Grid.Column="3"
                Width="150"
                HorizontalAlignment="Right"
                Click="SaveAttendance_Click"
                Style="{StaticResource MaterialDesignRaisedButton}">
                <StackPanel Orientation="Horizontal">
                    <Icon:PackIconMaterial Margin="0,0,5,0" Kind="ContentSave" />
                    <TextBlock Text="Save Attendance" />
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</UserControl>