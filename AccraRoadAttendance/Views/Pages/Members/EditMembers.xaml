<UserControl
    x:Class="AccraRoadAttendance.Views.Pages.Members.EditMembers"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Margin="10" Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Form Header  -->
        <StackPanel
            Grid.Row="0"
            Margin="10"
            Orientation="Horizontal">
            <materialDesign:PackIcon
                Width="30"
                Height="30"
                Foreground="#4880FF"
                Kind="AccountEdit" />
            <TextBlock
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                FontSize="24"
                FontWeight="Bold"
                Foreground="#374655"
                Text="Edit Member" />
        </StackPanel>

        <!--  Form Inputs  -->
        <ScrollViewer Grid.Row="1" Margin="10">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  First Name  -->
                <StackPanel
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="10">
                    <TextBlock
                        Margin="0,0,0,5"
                        FontWeight="SemiBold"
                        Foreground="#374655"
                        Text="First Name:" />
                    <TextBox
                        materialDesign:HintAssist.Hint="Enter first name"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <!--  Last Name  -->
                <StackPanel
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="10">
                    <TextBlock
                        Margin="0,0,0,5"
                        FontWeight="SemiBold"
                        Foreground="#374655"
                        Text="Last Name:" />
                    <TextBox
                        materialDesign:HintAssist.Hint="Enter last name"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <!--  Other Names  -->
                <StackPanel
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="10">
                    <TextBlock
                        Margin="0,0,0,5"
                        FontWeight="SemiBold"
                        Foreground="#374655"
                        Text="Other Names:" />
                    <TextBox
                        materialDesign:HintAssist.Hint="Enter other names"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Text="{Binding OtherNames, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <!--  Gender  -->
                <StackPanel
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="10">
                    <TextBlock
                        Margin="0,0,0,5"
                        FontWeight="SemiBold"
                        Foreground="#374655"
                        Text="Gender:" />
                    <ComboBox
                        Height="40"
                        Padding="5,0,10,0"
                        HorizontalContentAlignment="Stretch"
                        materialDesign:HintAssist.Hint="Choose gender"
                        Style="{StaticResource MaterialDesignOutlinedComboBox}"
                        Text="{Binding Gender, UpdateSourceTrigger=PropertyChanged}">
                        <ComboBoxItem Content="Male" />
                        <ComboBoxItem Content="Female" />
                    </ComboBox>
                </StackPanel>

                <!--  Phone Number  -->
                <StackPanel
                    Grid.Row="2"
                    Grid.Column="0"
                    Margin="10">
                    <TextBlock
                        Margin="0,0,0,5"
                        FontWeight="SemiBold"
                        Foreground="#374655"
                        Text="Phone Number:" />
                    <TextBox
                        materialDesign:HintAssist.Hint="Enter phone number"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <!--  Email  -->
                <StackPanel
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="10">
                    <TextBlock
                        Margin="0,0,0,5"
                        FontWeight="SemiBold"
                        Foreground="#374655"
                        Text="Email:" />
                    <TextBox
                        materialDesign:HintAssist.Hint="Enter email"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <!--  Upload Picture Section  -->
                <StackPanel
                    Grid.Row="3"
                    Grid.Column="0"
                    Margin="10">
                    <TextBlock
                        Margin="0,0,0,5"
                        FontWeight="SemiBold"
                        Foreground="#374655"
                        Text="Upload Picture:" />
                    <Button
                        Height="40"
                        Background="#4880FF"
                        Click="UploadPicture_Click"
                        Content="Select Picture"
                        Foreground="White"
                        Style="{StaticResource MaterialDesignRaisedButton}" />
                    <TextBlock
                        Margin="0,5,0,0"
                        FontSize="12"
                        Foreground="#888"
                        Text="{Binding SelectedPicturePath, UpdateSourceTrigger=PropertyChanged}" />

                    <!--  Image Preview  -->
                    <Border
                        Width="150"
                        Height="150"
                        Margin="0,10,0,0"
                        BorderBrush="#CCC"
                        BorderThickness="1"
                        CornerRadius="5">
                        <Image x:Name="ImagePreview" Stretch="UniformToFill" />
                    </Border>
                </StackPanel>

                <!--  Action Buttons  -->
                <StackPanel
                    Grid.Row="4"
                    Margin="10"
                    HorizontalAlignment="Left"
                    Orientation="Horizontal">
                    <Button
                        Width="100"
                        Margin="5"
                        Background="#4880FF"
                        Click="UpdateMember_Click"
                        Content="Update"
                        Foreground="White"
                        Style="{StaticResource MaterialDesignRaisedButton}" />
                    <Button
                        Width="100"
                        Margin="5"
                        Click="Cancel_Click"
                        Content="Cancel"
                        Style="{StaticResource MaterialDesignFlatButton}" />
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>