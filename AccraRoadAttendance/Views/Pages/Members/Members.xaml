<UserControl
    x:Class="AccraRoadAttendance.Views.Pages.Members.Members"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="10,2">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />

        </Grid.RowDefinitions>

        <!--  Top Bar  -->

        <TextBlock
            Grid.Row="0"
            Margin="0,20,0,0"
            HorizontalAlignment="Left"
            FontSize="32"
            FontWeight="SemiBold"
            Foreground="#121518"
            Text="Members" />

        <!--  Add Button  -->

        <Button
            Grid.Row="1"
            HorizontalAlignment="Left"
            Style="{StaticResource addButton}">
            <StackPanel Orientation="Horizontal">
                <Icon:PackIconMaterial
                    Width="11"
                    Height="11"
                    Margin="0,1,8,0"
                    VerticalAlignment="Center"
                    Kind="Plus" />
                <TextBlock Text="Add New Member" />
            </StackPanel>
        </Button>
        <!--  Seprator  -->
        <Separator
            Grid.Row="2"
            Height="1"
            Margin="0,-1,0,10"
            Background="#DAE2EA" />


        <Grid
            Grid.Row="1"
            Width="200"
            HorizontalAlignment="Right">
            <TextBox
                Margin="0,10,0,0"
                materialDesign:HintAssist.Hint="Search Members"
                materialDesign:TextFieldAssist.HasTrailingIcon="True"
                materialDesign:TextFieldAssist.TextFieldCornerRadius="7"
                materialDesign:TextFieldAssist.TrailingIcon="{x:Static materialDesign:PackIconKind.Magnify}"
                Foreground="#B0B9C6"
                TextChanged="SearchMembers_TextChanged">
                <TextBox.Style>
                    <Style BasedOn="{StaticResource MaterialDesignOutlinedTextBox}" TargetType="TextBox">
                        <Setter Property="Padding" Value="5,5,5,5" />


                    </Style>
                </TextBox.Style>
            </TextBox>
        </Grid>



        <materialDesign:Card
            Grid.Row="3"
            Margin="10,0"
            materialDesign:ElevationAssist.Elevation="Dp4"
            Background="{DynamicResource MaterialDesignPaper}">
            <DataGrid
                x:Name="membersDataGrid"
                MaxHeight="500"
                CellStyle="{DynamicResource DataGridCellStyle1}"
                ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}"
                RowStyle="{DynamicResource DataGridRowStyle1}"
                Style="{DynamicResource DataGridStyle1}">
                <DataGrid.Columns>
                    <DataGridCheckBoxColumn
                        Width="auto"
                        CanUserResize="False"
                        ElementStyle="{StaticResource CheckBoxStyle1}"
                        Header="C">
                        <DataGridCheckBoxColumn.HeaderTemplate>
                            <DataTemplate>
                                <CheckBox Style="{StaticResource CheckBoxStyle1}" />
                            </DataTemplate>
                        </DataGridCheckBoxColumn.HeaderTemplate>
                    </DataGridCheckBoxColumn>
                    <DataGridTextColumn
                        Width="auto"
                        Binding="{Binding Id}"
                        CanUserResize="False"
                        Header="ID"
                        IsReadOnly="True" />
                    <DataGridTemplateColumn
                        Width="*"
                        Header="Member"
                        IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Border
                                        Width="25"
                                        Height="25"
                                        Margin="0,0,10,0"
                                        Background="{Binding BgColor}"
                                        CornerRadius="50">
                                        <TextBlock
                                            Margin="0,0,0,1"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Foreground="White"
                                            Text="{Binding Character}" />
                                    </Border>

                                    <TextBlock VerticalAlignment="Center" Text="{Binding Name}" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Name}"
                        Header="Name"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Email}"
                        Header="Email"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding PhoneNumber}"
                        Header="Phone"
                        IsReadOnly="True" />
                    <DataGridTemplateColumn
                        Width="auto"
                        Header="Operations"
                        IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Style="{StaticResource gridEditButton}">
                                        <Icon:PackIconMaterial Kind="PencilOutline" Style="{StaticResource gridButtonIcon}" />
                                    </Button>
                                    <Button Margin="5,0,0,0" Style="{StaticResource gridRemoveButton}">
                                        <Icon:PackIconMaterial Kind="DeleteOutline" Style="{StaticResource gridButtonIcon}" />
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

        </materialDesign:Card>

        <!--  Pagination  -->
        <Border
            Grid.Row="4"
            Margin="0,2,10,10"
            Padding="5"
            HorizontalAlignment="Right"
            materialDesign:ElevationAssist.Elevation="Dp4"
            Background="White"
            BorderBrush="#dee4ec"
            BorderThickness="1"
            CornerRadius="5">
            <StackPanel Orientation="Horizontal">
                <Button Style="{StaticResource pagingButton}">
                    <Icon:PackIconMaterial Kind="ChevronLeft" Style="{StaticResource pagingButtonIcon}" />
                </Button>
                <Rectangle
                    Width="1"
                    Margin="3,7"
                    Fill="#dee4ec" />
                <Button Content="1" Style="{StaticResource pagingButton}" />
                <Button Content="2" Style="{StaticResource pagingButton}" />
                <Button Content="3" Style="{StaticResource pagingButton}" />
                <TextBlock
                    Margin="10,0"
                    VerticalAlignment="Center"
                    FontSize="15"
                    Foreground="#6c7682"
                    Text="..." />
                <Button Content="5" Style="{StaticResource pagingButton}" />
                <Rectangle
                    Width="1"
                    Margin="3,7"
                    Fill="#dee4ec" />
                <Button Style="{StaticResource pagingButton}">
                    <Icon:PackIconMaterial Kind="ChevronRight" Style="{StaticResource pagingButtonIcon}" />
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>