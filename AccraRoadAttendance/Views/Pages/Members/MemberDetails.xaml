<UserControl
    x:Class="AccraRoadAttendance.Views.Pages.Members.MemberDetails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:AccraRoadAttendance.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="600"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converters:EnumDisplayConverter x:Key="EnumDisplayConverter" />
        <converters:BooleanToStringConverter x:Key="BooleanToStringConverter" />
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter" />

        <Style x:Key="DetailLabel" TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignBody1TextBlock}">
            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBodyLight}" />
            <Setter Property="Margin" Value="0 0 0 4" />
        </Style>

        <Style x:Key="DetailValue" TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignBody1TextBlock}">
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Margin" Value="0 0 0 4" />
        </Style>
    </UserControl.Resources>

    <materialDesign:Card Margin="16" Padding="16">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Profile Header -->
            <Grid Grid.Row="0" Margin="0 0 24 24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Profile Picture Section (Fixed Child Property) -->
                <Border
                    Grid.Column="0"
                    Width="120"
                    Height="120"
                    CornerRadius="60"
                    Background="{DynamicResource MaterialDesignPaper}"
                    BorderBrush="{DynamicResource MaterialDesignDivider}"
                    BorderThickness="1">
                    <Grid>
                        <Image Source="{Binding Member.PicturePath}" Stretch="UniformToFill">
                            <Image.Clip>
                                <EllipseGeometry Center="60,60" RadiusX="60" RadiusY="60" />
                            </Image.Clip>
                            <Image.Style>
                                <Style TargetType="Image">
                                    <Setter Property="Visibility" Value="Visible" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Member.PicturePath}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>
                        <materialDesign:PackIcon
                            Kind="AccountCircle"
                            Width="120"
                            Height="120"
                            Visibility="{Binding Member.PicturePath, Converter={StaticResource BoolToVisConverter}, ConverterParameter=Inverse}"
                            Foreground="{DynamicResource MaterialDesignBodyLight}" />
                    </Grid>
                </Border>

                <!-- Profile Info -->
                <StackPanel Grid.Column="1" Margin="24 0 0 0" VerticalAlignment="Center">
                    <TextBlock
                        Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                        Text="{Binding Member.FullName}" />
                    <TextBlock
                        Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                        Foreground="{DynamicResource MaterialDesignBodyLight}"
                        Text="{Binding Member.OccupationType, Converter={StaticResource EnumDisplayConverter}}" />
                    <TextBlock
                        Style="{StaticResource MaterialDesignBody1TextBlock}"
                        Foreground="{DynamicResource MaterialDesignBodyLight}"
                        Text="{Binding Member.Email}" />
                </StackPanel>
            </Grid>

            <!-- Details Sections -->
            <ScrollViewer Grid.Row="1">
                <StackPanel>
                    <!-- Personal Information Card -->
                    <materialDesign:Card Margin="0 0 0 16" Padding="16">
                        <StackPanel>
                            <TextBlock
                                Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                Margin="0 0 0 12"
                                Text="Personal Information" />

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource DetailLabel}" Text="Date of Birth" />
                                <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource DetailValue}" 
                                         Text="{Binding Member.DateOfBirth, StringFormat=d}" />

                                <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource DetailLabel}" Text="Gender" />
                                <TextBlock Grid.Row="1" Grid.Column="1" Style="{StaticResource DetailValue}" 
                                         Text="{Binding Member.Gender, Converter={StaticResource EnumDisplayConverter}}" />

                                <TextBlock Grid.Row="2" Grid.Column="0" Style="{StaticResource DetailLabel}" Text="Nationality" />
                                <TextBlock Grid.Row="2" Grid.Column="1" Style="{StaticResource DetailValue}" 
                                         Text="{Binding Member.Nationality}" />
                            </Grid>
                        </StackPanel>
                    </materialDesign:Card>

                    <!-- Contact Information Card -->
                    <materialDesign:Card Margin="0 0 0 16" Padding="16">
                        <StackPanel>
                            <TextBlock
                                Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                Margin="0 0 0 12"
                                Text="Contact Information" />

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource DetailLabel}" Text="Phone Number" />
                                <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource DetailValue}" 
                                         Text="{Binding Member.PhoneNumber}" />

                                <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource DetailLabel}" Text="Address" />
                                <TextBlock Grid.Row="1" Grid.Column="1" Style="{StaticResource DetailValue}" 
                                         Text="{Binding Member.Address}" TextWrapping="Wrap" />

                                <TextBlock Grid.Row="2" Grid.Column="0" Style="{StaticResource DetailLabel}" Text="Hometown" />
                                <TextBlock Grid.Row="2" Grid.Column="1" Style="{StaticResource DetailValue}" 
                                         Text="{Binding Member.Hometown}" />
                            </Grid>
                        </StackPanel>
                    </materialDesign:Card>

                    <!-- Family & Emergency Contacts Card (Fixed Ampersand) -->
                    <materialDesign:Card Margin="0 0 0 16" Padding="16">
                        <StackPanel>
                            <TextBlock
                                Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                Margin="0 0 0 12"
                                Text="Family &amp; Emergency Contacts" />

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource DetailLabel}" Text="Marital Status" />
                                <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource DetailValue}" 
                                         Text="{Binding Member.MaritalStatus, Converter={StaticResource EnumDisplayConverter}}" />

                                <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource DetailLabel}" Text="Next of Kin" />
                                <TextBlock Grid.Row="1" Grid.Column="1" Style="{StaticResource DetailValue}" 
                                         Text="{Binding Member.NextOfKinName}" />

                                <TextBlock Grid.Row="2" Grid.Column="0" Style="{StaticResource DetailLabel}" Text="Kin Contact" />
                                <TextBlock Grid.Row="2" Grid.Column="1" Style="{StaticResource DetailValue}" 
                                         Text="{Binding Member.NextOfKinContact}" />
                            </Grid>
                        </StackPanel>
                    </materialDesign:Card>

                    <!-- Additional Information Card -->
                    <materialDesign:Card Margin="0 0 0 16" Padding="16">
                        <StackPanel>
                            <TextBlock
                                Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                Margin="0 0 0 12"
                                Text="Additional Information" />

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource DetailLabel}" Text="Education Level" />
                                <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource DetailValue}" 
                                         Text="{Binding Member.EducationalLevel, Converter={StaticResource EnumDisplayConverter}}" />

                                <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource DetailLabel}" Text="Skills" />
                                <TextBlock Grid.Row="1" Grid.Column="1" Style="{StaticResource DetailValue}" 
                                         Text="{Binding Member.Skills}" TextWrapping="Wrap" />

                                <TextBlock Grid.Row="2" Grid.Column="0" Style="{StaticResource DetailLabel}" Text="Baptism Status" />
                                <TextBlock Grid.Row="2" Grid.Column="1" Style="{StaticResource DetailValue}" 
                                         Text="{Binding Member.IsBaptized, Converter={StaticResource BooleanToStringConverter}}" />
                            </Grid>
                        </StackPanel>
                    </materialDesign:Card>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </materialDesign:Card>
</UserControl>