<UserControl
    x:Class="AccraRoadAttendance.Views.Pages.Members.AddMembers"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="900"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Margin="10" Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Form Header  -->
        <StackPanel
            Grid.Row="0"
            Margin="10"
            Orientation="Horizontal">
            <materialDesign:PackIcon
                Width="30"
                Height="30"
                Foreground="#4880FF"
                Kind="AccountPlus" />
            <TextBlock
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                FontSize="24"
                FontWeight="Bold"
                Foreground="#374655"
                Text="Add New Member" />
        </StackPanel>

        <!--  Form Inputs  -->
        <ScrollViewer Grid.Row="1" Margin="10">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  First Name  -->
                <StackPanel
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="10">
                    <TextBlock
                        Margin="0,0,0,5"
                        FontWeight="SemiBold"
                        Foreground="#374655"
                        Text="First Name:" />
                    <TextBox
                        materialDesign:HintAssist.Hint="Enter first name"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <!--  Last Name  -->
                <StackPanel
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="10">
                    <TextBlock
                        Margin="0,0,0,5"
                        FontWeight="SemiBold"
                        Foreground="#374655"
                        Text="Last Name:" />
                    <TextBox
                        materialDesign:HintAssist.Hint="Enter last name"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <!--  Other Names  -->
                <StackPanel
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="10">
                    <TextBlock
                        Margin="0,0,0,5"
                        FontWeight="SemiBold"
                        Foreground="#374655"
                        Text="Other Names:" />
                    <TextBox
                        materialDesign:HintAssist.Hint="Enter other names"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Text="{Binding OtherNames, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <!--  Gender  -->
                <StackPanel
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="10">
                    <TextBlock
                        Margin="0,0,0,5"
                        FontWeight="SemiBold"
                        Foreground="#374655"
                        Text="Gender:" />
                    <ComboBox
                        x:Name="GenderComboBox"
                        Height="40"
                        Padding="5,0,10,0"
                        HorizontalContentAlignment="Stretch"
                        materialDesign:HintAssist.Hint="Choose gender"
                        SelectedValue="{Binding Gender, UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource MaterialDesignOutlinedComboBox}" />
                </StackPanel>

                <!--  Phone Number  -->
                <StackPanel
                    Grid.Row="2"
                    Grid.Column="0"
                    Margin="10">
                    <TextBlock
                        Margin="0,0,0,5"
                        FontWeight="SemiBold"
                        Foreground="#374655"
                        Text="Phone Number:" />
                    <TextBox
                        materialDesign:HintAssist.Hint="Enter phone number"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <!--  Email  -->
                <StackPanel
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="10">
                    <TextBlock
                        Margin="0,0,0,5"
                        FontWeight="SemiBold"
                        Foreground="#374655"
                        Text="Email:" />
                    <TextBox
                        materialDesign:HintAssist.Hint="Enter email"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <!--  Date of Birth  -->
                <StackPanel
                    Grid.Row="4"
                    Grid.Column="0"
                    Margin="10">
                    <TextBlock
                        FontWeight="SemiBold"
                        Foreground="#374655"
                        Text="Date of Birth" />
                    <DatePicker
                        x:Name="DateOfBirthPicker"
                        materialDesign:HintAssist.Hint="Select date of birth"
                        SelectedDate="{Binding DateOfBirth}"
                        Style="{StaticResource MaterialDesignOutlinedDatePicker}" />
                </StackPanel>

                <!--  Nationality  -->
                <StackPanel
                    Grid.Row="4"
                    Grid.Column="1"
                    Margin="10">
                    <TextBlock
                        FontWeight="SemiBold"
                        Foreground="#374655"
                        Text="Nationality" />
                    <TextBox
                        materialDesign:HintAssist.Hint="Enter nationality"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Text="{Binding Nationality}" />
                </StackPanel>

                <!--  Marital Status  -->
                <StackPanel
                    Grid.Row="5"
                    Grid.Column="0"
                    Margin="10">
                    <TextBlock
                        Margin="0,0,0,5"
                        FontWeight="SemiBold"
                        Foreground="#374655"
                        Text="Marital status:" />
                    <ComboBox
                        x:Name="MaritalStatusComboBox"
                        Height="40"
                        Padding="5,0,10,0"
                        HorizontalContentAlignment="Stretch"
                        materialDesign:HintAssist.Hint="Choose marital status"
                        SelectedValue="{Binding maritalStatus, UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource MaterialDesignOutlinedComboBox}" />
                </StackPanel>

                <!--  Occupation  -->
                <StackPanel
                    Grid.Row="5"
                    Grid.Column="1"
                    Margin="10">
                    <TextBlock
                        Margin="0,0,0,5"
                        FontWeight="SemiBold"
                        Foreground="#374655"
                        Text="Occupation:" />
                    <ComboBox
                        x:Name="OccupationTypeComboBox"
                        Height="40"
                        Padding="5,0,10,0"
                        HorizontalContentAlignment="Stretch"
                        materialDesign:HintAssist.Hint="Choose occupation"
                        SelectedValue="{Binding occupationType, UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource MaterialDesignOutlinedComboBox}" />

                </StackPanel>

                <!--  Address  -->
                <StackPanel
                    Grid.Row="6"
                    Grid.Column="0"
                    Margin="10">
                    <TextBlock
                        Margin="0,0,0,5"
                        FontWeight="SemiBold"
                        Foreground="#374655"
                        Text="Address:" />
                    <TextBox
                        materialDesign:HintAssist.Hint="Enter house address"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <!--  Next Of Kin name  -->
                <StackPanel
                    Grid.Row="6"
                    Grid.Column="1"
                    Margin="10">
                    <TextBlock
                        Margin="0,0,0,5"
                        FontWeight="SemiBold"
                        Foreground="#374655"
                        Text="Next of Kin name:" />
                    <TextBox
                        materialDesign:HintAssist.Hint="Enter name of next of kin"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Text="{Binding NextOfKinName, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <!--  Next Of Kin contact  -->
                <StackPanel
                    Grid.Row="7"
                    Grid.Column="0"
                    Margin="10">
                    <TextBlock
                        Margin="0,0,0,5"
                        FontWeight="SemiBold"
                        Foreground="#374655"
                        Text="Next of Kin contact:" />
                    <TextBox
                        materialDesign:HintAssist.Hint="Enter contact of next of Kin"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Text="{Binding NextOfKinContact, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <!--  Hometown  -->
                <StackPanel
                    Grid.Row="7"
                    Grid.Column="1"
                    Margin="10">
                    <TextBlock
                        Margin="0,0,0,5"
                        FontWeight="SemiBold"
                        Foreground="#374655"
                        Text="Hometown:" />
                    <TextBox
                        materialDesign:HintAssist.Hint="Enter hometown"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Text="{Binding Hometown, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <!--  Skills  -->
                <StackPanel
                    Grid.Row="8"
                    Grid.Column="0"
                    Margin="10">
                    <TextBlock
                        Margin="0,0,0,5"
                        FontWeight="SemiBold"
                        Foreground="#374655"
                        Text="Skills:" />
                    <TextBox
                        materialDesign:HintAssist.Hint="Enter what you can do in church"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Text="{Binding Skills, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <!--  Education Level  -->
                <StackPanel
                    Grid.Row="8"
                    Grid.Column="1"
                    Margin="10">
                    <TextBlock
                        Margin="0,0,0,5"
                        FontWeight="SemiBold"
                        Foreground="#374655"
                        Text="Education:" />
                    <ComboBox
                        x:Name="EducationComboBox"
                        Height="40"
                        Padding="5,0,10,0"
                        HorizontalContentAlignment="Stretch"
                        materialDesign:HintAssist.Hint="Choose education level"
                        SelectedValue="{Binding educationalLevel, UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource MaterialDesignOutlinedComboBox}" />

                </StackPanel>




                <!--  Baptism Section  -->
                <StackPanel
                    Grid.Row="9"
                    Grid.Column="0"
                    Margin="10">
                    <CheckBox
                        x:Name="IsBaptizedCheckBox"
                        Margin="0,0,0,5"
                        Checked="IsBaptizedCheckBox_Checked"
                        Content="Is Baptized"
                        IsChecked="{Binding IsBaptized}"
                        Unchecked="IsBaptizedCheckBox_Unchecked" />
                    <DatePicker
                        x:Name="BaptismDatePicker"
                        materialDesign:HintAssist.Hint="Baptism date"
                        SelectedDate="{Binding BaptismDate}"
                        Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                        Visibility="Collapsed" />
                </StackPanel>

                <!--  Family Member Section  -->
                <StackPanel
                    Grid.Row="9"
                    Grid.Column="1"
                    Margin="10">
                    <CheckBox
                        x:Name="FamilyMemberCheckBox"
                        Margin="0,0,0,5"
                        Checked="FamilyMemberCheckBox_Checked"
                        Content="Has Family Member In Church"
                        IsChecked="{Binding HasFamilyMemberInChurch}"
                        Style="{StaticResource MaterialDesignCheckBox}"
                        Unchecked="FamilyMemberCheckBox_Unchecked" />
                    <TextBox
                        x:Name="FamilyMemberNameTextBox"
                        materialDesign:HintAssist.Hint="Family member name"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Text="{Binding FamilyMemberName}"
                        Visibility="Collapsed" />
                    <TextBox
                        x:Name="FamilyMemberContactTextBox"
                        Margin="0,5,0,0"
                        materialDesign:HintAssist.Hint="Family member contact"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Text="{Binding FamilyMemberContact}"
                        Visibility="Collapsed" />
                </StackPanel>

                <!--  Upload Picture Section  -->
                <StackPanel
                    Grid.Row="10"
                    Grid.Column="0"
                    Margin="10">
                    <TextBlock
                        Margin="0,0,0,5"
                        FontWeight="SemiBold"
                        Foreground="#374655"
                        Text="Upload Picture:" />
                    <Button
                        Height="40"
                        Background="#4880FF"
                        Click="UploadPicture_Click"
                        Content="Select Picture"
                        Foreground="White"
                        Style="{StaticResource MaterialDesignRaisedButton}" />
                    <TextBlock
                        Margin="0,5,0,0"
                        FontSize="12"
                        Foreground="#888"
                        Text="{Binding SelectedPicturePath, UpdateSourceTrigger=PropertyChanged}" />

                    <!--  Image Preview  -->
                    <Border
                        Width="150"
                        Height="150"
                        Margin="0,10,0,0"
                        BorderBrush="#CCC"
                        BorderThickness="1"
                        CornerRadius="5">
                        <Image x:Name="ImagePreview" Stretch="UniformToFill" />
                    </Border>
                </StackPanel>
                <!--  Action Buttons  -->
                <StackPanel
                    Grid.Row="11"
                    Margin="10"
                    HorizontalAlignment="Left"
                    Orientation="Horizontal">
                    <Button
                        Width="100"
                        Margin="5"
                        Background="#4880FF"
                        Click="SaveMember_Click"
                        Content="Save"
                        Foreground="White"
                        Style="{StaticResource MaterialDesignRaisedButton}" />
                    <Button
                        Width="100"
                        Margin="5"
                        Click="Cancel_Click"
                        Content="Cancel"
                        Style="{StaticResource MaterialDesignFlatButton}" />
                </StackPanel>

            </Grid>
        </ScrollViewer>

        <!--  Action Buttons  -->
        <!--<StackPanel
            Grid.Row="1"
            Margin="10"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Width="100"
                Margin="5"
                Background="#4880FF"
                Click="SaveMember_Click"
                Content="Save"
                Foreground="White"
                Style="{StaticResource MaterialDesignRaisedButton}" />
            <Button
                Width="100"
                Margin="5"
                Click="Cancel_Click"
                Content="Cancel"
                Style="{StaticResource MaterialDesignFlatButton}" />
        </StackPanel>-->



    </Grid>
</UserControl>
