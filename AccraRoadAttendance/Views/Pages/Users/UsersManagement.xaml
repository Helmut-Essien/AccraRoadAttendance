<UserControl
    x:Class="AccraRoadAttendance.Views.Pages.Users.UsersManagement"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="600"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Add User Section  -->
        <materialDesign:Card
            Grid.Row="0"
            Margin="0,0,0,10"
            materialDesign:ElevationAssist.Elevation="Dp2">
            <StackPanel Margin="10">
                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="20"
                    FontWeight="Bold"
                    Text="Add New User" />

                <!--  Member Search  -->
                <StackPanel Orientation="Horizontal">

                    <TextBox
                        x:Name="searchTextBox"
                        Width="300"
                        Margin="0,0,10,0"
                        materialDesign:HintAssist.Hint="Search members..."
                        materialDesign:TextFieldAssist.HasLeadingIcon="True"
                        materialDesign:TextFieldAssist.LeadingIcon="AccountSearch"
                        TextChanged="SearchTextBox_TextChanged" />

                    <ComboBox
                        x:Name="roleComboBox"
                        Width="150"
                        materialDesign:HintAssist.Hint="Select Role"
                        DisplayMemberPath="Name" />
                </StackPanel>

                <!--  Search Results  -->
                <ListBox
                    x:Name="membersListBox"
                    MaxHeight="150"
                    Margin="0,10"
                    DisplayMemberPath="FullName"
                    SelectionChanged="MembersListBox_SelectionChanged" />

                <!--  User Creation Form  -->
                <StackPanel x:Name="userFormPanel" Visibility="Collapsed">
                    <TextBox
                        x:Name="emailTextBox"
                        Margin="0,10"
                        materialDesign:HintAssist.Hint="Email"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}" />

                    <PasswordBox
                        x:Name="passwordBox"
                        Margin="0,10"
                        materialDesign:HintAssist.Hint="Password"
                        Style="{StaticResource MaterialDesignOutlinedPasswordBox}" />

                    <Button
                        Margin="0,10"
                        HorizontalAlignment="Right"
                        Click="AddUser_Click"
                        Content="Create User"
                        Style="{StaticResource MaterialDesignOutlinedButton}" />
                </StackPanel>
            </StackPanel>
        </materialDesign:Card>

        <!--  Existing Users  -->
        <materialDesign:Card Grid.Row="2" materialDesign:ElevationAssist.Elevation="Dp2">
            <DataGrid
                x:Name="usersDataGrid"
                AutoGenerateColumns="False"
                IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding User.UserName}" Header="Username" />
                    <DataGridTextColumn Binding="{Binding User.Member.FullName}" Header="Member Name" />
                    <DataGridTemplateColumn Header="Roles">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ComboBox
                                    x:Name="rolesComboBox"
                                    DisplayMemberPath="Name"
                                    ItemsSource="{Binding Roles}"
                                    SelectedItem="{Binding SelectedRole}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Actions">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button
                                        Margin="2"
                                        Click="SaveRole_Click"
                                        Content="Save"
                                        Style="{StaticResource MaterialDesignToolButton}" />
                                    <Button
                                        Margin="2"
                                        Click="DeleteUser_Click"
                                        Content="Delete"
                                        Style="{StaticResource MaterialDesignToolButton}" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </materialDesign:Card>
    </Grid>
</UserControl>