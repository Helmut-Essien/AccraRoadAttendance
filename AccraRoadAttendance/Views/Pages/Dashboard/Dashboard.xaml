<UserControl x:Class="AccraRoadAttendance.Views.Pages.Dashboard.Dashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d"
             d:DesignHeight="650" d:DesignWidth="1000">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Summary Cards -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total Members -->
            <materialDesign:Card Grid.Column="0" Margin="0,0,10,10" Background="#2196F3"
                               materialDesign:ElevationAssist.Elevation="Dp2" UniformCornerRadius="10">
                <StackPanel Margin="15">
                    <materialDesign:PackIcon Kind="Accounts" Width="30" Height="30" Foreground="White"/>
                    <TextBlock Text="Total Members" Foreground="White" FontSize="14" Margin="0,10,0,5"/>
                    <TextBlock x:Name="TotalMembersCount" Text="0" Foreground="White" FontSize="24" FontWeight="Bold"/>
                </StackPanel>
            </materialDesign:Card>

            <!-- Men -->
            <materialDesign:Card Grid.Column="1" Margin="0,0,10,10" Background="#4CAF50"
                               materialDesign:ElevationAssist.Elevation="Dp2" UniformCornerRadius="10">
                <StackPanel Margin="15">
                    <materialDesign:PackIcon Kind="HumanMale" Width="30" Height="30" Foreground="White"/>
                    <TextBlock Text="Men" Foreground="White" FontSize="14" Margin="0,10,0,5"/>
                    <TextBlock x:Name="TotalMenCount" Text="0" Foreground="White" FontSize="24" FontWeight="Bold"/>
                </StackPanel>
            </materialDesign:Card>

            <!-- Women -->
            <materialDesign:Card Grid.Column="2" Margin="0,0,10,10" Background="#F06292"
                               materialDesign:ElevationAssist.Elevation="Dp2" UniformCornerRadius="10">
                <StackPanel Margin="15">
                    <materialDesign:PackIcon Kind="HumanFemale" Width="30" Height="30" Foreground="White"/>
                    <TextBlock Text="Women" Foreground="White" FontSize="14" Margin="0,10,0,5"/>
                    <TextBlock x:Name="TotalWomenCount" Text="0" Foreground="White" FontSize="24" FontWeight="Bold"/>
                </StackPanel>
            </materialDesign:Card>

            <!-- Last Sunday Attendance -->
            <materialDesign:Card Grid.Column="3" Margin="0,0,0,10" Background="#FFB300"
                               materialDesign:ElevationAssist.Elevation="Dp2" UniformCornerRadius="10">
                <StackPanel Margin="15">
                    <materialDesign:PackIcon Kind="Church" Width="30" Height="30" Foreground="White"/>
                    <TextBlock Text="Last Sunday" Foreground="White" FontSize="14" Margin="0,10,0,5"/>
                    <TextBlock x:Name="LastSundayAttendance" Text="0" Foreground="White" FontSize="24" FontWeight="Bold"/>
                </StackPanel>
            </materialDesign:Card>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Attendance Chart (LiveCharts) -->
            <materialDesign:Card Grid.Column="0" Margin="0,0,10,0"
                               materialDesign:ElevationAssist.Elevation="Dp2" UniformCornerRadius="10">
                <StackPanel Margin="15">
                    <TextBlock Text="Attendance Trends" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                    <lvc:CartesianChart x:Name="AttendanceChart" Height="300" />
                </StackPanel>
            </materialDesign:Card>

            <!-- Absent Members -->
            <materialDesign:Card Grid.Column="1" Margin="0"
                               materialDesign:ElevationAssist.Elevation="Dp2" UniformCornerRadius="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Absent for 2+ Months" FontSize="18"
                              FontWeight="Bold" Margin="15,15,15,10"/>

                    <ListView Grid.Row="1" x:Name="AbsentMembersList" Margin="15,0,15,15">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Name" Width="150"
                                              DisplayMemberBinding="{Binding FullName}"/>
                                <GridViewColumn Header="Last Attended" Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding LastAttendanceDate, StringFormat='dd/MM/yyyy'}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </materialDesign:Card>
        </Grid>
    </Grid>
</UserControl>