<UserControl
    x:Class="AccraRoadAttendance.Views.Pages.Dashboard.Dashboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="650"
    d:DesignWidth="1000"
    mc:Ignorable="d">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Summary Cards  -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <!--  Total Members  -->
            <materialDesign:Card
                Grid.Column="0"
                Margin="0,0,10,10"
                materialDesign:ElevationAssist.Elevation="Dp2"
                Background="#2196F3"
                UniformCornerRadius="10">
                <StackPanel
                    Margin="15"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                    <materialDesign:PackIcon
                        Width="30"
                        Height="30"
                        HorizontalAlignment="Center"
                        Foreground="White"
                        Kind="Accounts" />
                    <TextBlock
                        Margin="0,10,0,5"
                        HorizontalAlignment="Center"
                        FontSize="14"
                        Foreground="White"
                        Text="Total Members" />
                    <TextBlock
                        x:Name="TotalMembersCount"
                        HorizontalAlignment="Center"
                        FontSize="24"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="{Binding DisplayTotalMembers}" />
                </StackPanel>
            </materialDesign:Card>

            <!--  Men  -->
            <materialDesign:Card
                Grid.Column="1"
                Margin="0,0,10,10"
                materialDesign:ElevationAssist.Elevation="Dp2"
                Background="#4CAF50"
                UniformCornerRadius="10">
                <StackPanel
                    Margin="15"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                    <materialDesign:PackIcon
                        Width="30"
                        Height="30"
                        HorizontalAlignment="Center"
                        Foreground="White"
                        Kind="HumanMale" />
                    <TextBlock
                        Margin="0,10,0,5"
                        HorizontalAlignment="Center"
                        FontSize="14"
                        Foreground="White"
                        Text="Men" />
                    <TextBlock
                        x:Name="TotalMenCount"
                        HorizontalAlignment="Center"
                        FontSize="24"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="{Binding DisplayMen}" />
                </StackPanel>
            </materialDesign:Card>

            <!--  Women  -->
            <materialDesign:Card
                Grid.Column="2"
                Margin="0,0,10,10"
                materialDesign:ElevationAssist.Elevation="Dp2"
                Background="#F06292"
                UniformCornerRadius="10">
                <StackPanel
                    Margin="15"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                    <materialDesign:PackIcon
                        Width="30"
                        Height="30"
                        HorizontalAlignment="Center"
                        Foreground="White"
                        Kind="HumanFemale" />
                    <TextBlock
                        Margin="0,10,0,5"
                        HorizontalAlignment="Center"
                        FontSize="14"
                        Foreground="White"
                        Text="Women" />
                    <TextBlock
                        x:Name="TotalWomenCount"
                        HorizontalAlignment="Center"
                        FontSize="24"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="{Binding DisplayWomen}" />
                </StackPanel>
            </materialDesign:Card>

            <!--  Replace the existing Last Sunday Attendance card with these two cards  -->
            <!--  Last Sunday Attendance Card  -->
            <!--<materialDesign:Card
                Grid.Column="3"
                Margin="0,0,0,10"
                materialDesign:ElevationAssist.Elevation="Dp2"
                Background="#FFB300"
                UniformCornerRadius="10">
                <StackPanel Margin="15">
                    <materialDesign:PackIcon
                        Width="30"
                        Height="30"
                        Foreground="White"
                        Kind="Church" />
                    <TextBlock
                        Margin="0,10,0,5"
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="Last Sunday Attendance" />
                    <TextBlock
                        x:Name="LastSundayDate"
                        Margin="0,5,0,0"
                        FontSize="12"
                        Foreground="White"
                        Text="Date: N/A" />
                </StackPanel>
            </materialDesign:Card>-->

            <!--  Last Sunday Attendance  -->
            <materialDesign:Card
                Grid.Column="3"
                Margin="0,0,0,10"
                materialDesign:ElevationAssist.Elevation="Dp2"
                Background="#FFB300"
                UniformCornerRadius="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <!--  Header Row: Icon and Title  -->
                        <RowDefinition Height="Auto" />
                        <!--  Summary Row: Attendance Details  -->
                        <RowDefinition Height="Auto" />


                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>

                    <Grid />

                    <!--  Header Section  -->
                    <StackPanel
                        Grid.Row="0"
                        Margin="15"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <materialDesign:PackIcon
                            Width="30"
                            Height="30"
                            Foreground="White"
                            Kind="Church" />
                        <TextBlock
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="14"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="Last Sunday Attendance" />
                    </StackPanel>

                    <!--  Summary Section using Binding and Two-Column Grid  -->
                    <Border
                        Grid.Row="1"
                        Margin="10"
                        Background="#FFB300"
                        CornerRadius="5">
                        <Grid
                            Margin="10"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!--  Date  -->
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                FontSize="14"
                                Foreground="White"
                                Text="Date:" />
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="1"
                                Margin="5,4,0,0"
                                FontSize="14"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="{Binding LastSundayDate}" />

                            <!--  Men  -->
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="0"
                                Margin="0,4,0,0"
                                FontSize="14"
                                Foreground="White"
                                Text="Men:" />
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="5,4,0,0"
                                FontSize="14"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="{Binding LastSundayMen}" />

                            <!--  Women  -->
                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="0"
                                Margin="0,4,0,0"
                                FontSize="14"
                                Foreground="White"
                                Text="Women:" />
                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="1"
                                Margin="5,4,0,0"
                                FontSize="14"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="{Binding LastSundayWomen}" />

                            <!--  Total  -->
                            <TextBlock
                                Grid.Row="3"
                                Grid.Column="0"
                                Margin="0,4,0,0"
                                FontSize="14"
                                Foreground="White"
                                Text="Total:" />
                            <TextBlock
                                Grid.Row="3"
                                Grid.Column="1"
                                Margin="5,4,0,0"
                                FontSize="14"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="{Binding LastSundayTotal}" />

                            <!--  Offering  -->
                            <TextBlock
                                Grid.Row="4"
                                Grid.Column="0"
                                Margin="0,4,0,0"
                                FontSize="14"
                                Foreground="White"
                                Text="Offering:" />
                            <TextBlock
                                Grid.Row="4"
                                Grid.Column="1"
                                Margin="5,4,0,0"
                                FontSize="14"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="{Binding LastSundayOffering}" />
                        </Grid>
                    </Border>
                </Grid>
            </materialDesign:Card>

        </Grid>

        <!--  Main Content  -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <!--  Attendance Chart (LiveCharts)  -->
            <materialDesign:Card
                Grid.Column="0"
                Margin="0,0,10,0"
                materialDesign:ElevationAssist.Elevation="Dp2"
                UniformCornerRadius="10">
                <StackPanel Margin="15">
                    <TextBlock
                        Margin="0,0,0,15"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="{DynamicResource MaterialDesignBody}"
                        Text="Attendance Trends" />
                    <lvc:CartesianChart x:Name="AttendanceChart" Height="300" />
                </StackPanel>
            </materialDesign:Card>

            <!--  Absent Members  -->
            <materialDesign:Card
                Grid.Column="1"
                Margin="0"
                materialDesign:ElevationAssist.Elevation="Dp2"
                UniformCornerRadius="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Margin="15,15,15,10"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="{DynamicResource MaterialDesignBody}"
                        Text="Absent for 2+ Weeks" />

                    <!--  Update AbsentMembersList GridViewColumns  -->
                    <ListView
                        x:Name="AbsentMembersList"
                        Grid.Row="1"
                        Margin="15,0,15,15"
                        VirtualizingStackPanel.IsVirtualizing="False">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="Auto" Header="Name">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Click="NavigateToMemberDetails_Click"
                                                CommandParameter="{Binding}"
                                                Content="{Binding Member.FullName}"
                                                Cursor="Hand"
                                                Foreground="{DynamicResource MaterialDesignBody}" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Width="auto" Header="Last Attended">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Click="NavigateToMemberDetails_Click"
                                                CommandParameter="{Binding}"
                                                Content="{Binding LastAttendanceDate, StringFormat='dd/MM/yyyy'}"
                                                Cursor="Hand"
                                                Foreground="{DynamicResource MaterialDesignBody}" />
                                            <!--<TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Text="{Binding LastAttendanceDate, StringFormat='dd/MM/yyyy'}"
                                                TextAlignment="Center" />-->
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>

                </Grid>
            </materialDesign:Card>
        </Grid>
    </Grid>
</UserControl>