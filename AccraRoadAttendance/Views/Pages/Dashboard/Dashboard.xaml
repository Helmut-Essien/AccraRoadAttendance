<UserControl
    x:Class="AccraRoadAttendance.Views.Pages.Dashboard.Dashboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="650"
    d:DesignWidth="1000"
    mc:Ignorable="d">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Summary Cards  -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <!--  Total Members  -->
            <materialDesign:Card
                Grid.Column="0"
                Margin="0,0,10,10"
                materialDesign:ElevationAssist.Elevation="Dp2"
                Background="#2196F3"
                UniformCornerRadius="10">
                <StackPanel Margin="15">
                    <materialDesign:PackIcon
                        Width="30"
                        Height="30"
                        Foreground="White"
                        Kind="Accounts" />
                    <TextBlock
                        Margin="0,10,0,5"
                        FontSize="14"
                        Foreground="White"
                        Text="Total Members" />
                    <TextBlock
                        x:Name="TotalMembersCount"
                        FontSize="24"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="0" />
                </StackPanel>
            </materialDesign:Card>

            <!--  Men  -->
            <materialDesign:Card
                Grid.Column="1"
                Margin="0,0,10,10"
                materialDesign:ElevationAssist.Elevation="Dp2"
                Background="#4CAF50"
                UniformCornerRadius="10">
                <StackPanel Margin="15">
                    <materialDesign:PackIcon
                        Width="30"
                        Height="30"
                        Foreground="White"
                        Kind="HumanMale" />
                    <TextBlock
                        Margin="0,10,0,5"
                        FontSize="14"
                        Foreground="White"
                        Text="Men" />
                    <TextBlock
                        x:Name="TotalMenCount"
                        FontSize="24"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="0" />
                </StackPanel>
            </materialDesign:Card>

            <!--  Women  -->
            <materialDesign:Card
                Grid.Column="2"
                Margin="0,0,10,10"
                materialDesign:ElevationAssist.Elevation="Dp2"
                Background="#F06292"
                UniformCornerRadius="10">
                <StackPanel Margin="15">
                    <materialDesign:PackIcon
                        Width="30"
                        Height="30"
                        Foreground="White"
                        Kind="HumanFemale" />
                    <TextBlock
                        Margin="0,10,0,5"
                        FontSize="14"
                        Foreground="White"
                        Text="Women" />
                    <TextBlock
                        x:Name="TotalWomenCount"
                        FontSize="24"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="0" />
                </StackPanel>
            </materialDesign:Card>

            <!--  Last Sunday Attendance  -->
            <materialDesign:Card
                Grid.Column="3"
                Margin="0,0,0,10"
                materialDesign:ElevationAssist.Elevation="Dp2"
                Background="#FFB300"
                UniformCornerRadius="10">
                <StackPanel Margin="15">
                    <materialDesign:PackIcon
                        Width="30"
                        Height="30"
                        Foreground="White"
                        Kind="Church" />
                    <TextBlock
                        Margin="0,10,0,5"
                        FontSize="14"
                        Foreground="White"
                        Text="Last Sunday Attendance" />
                    <TextBlock
                        x:Name="LastSundayDate"
                        Margin="0,2"
                        FontSize="12"
                        Foreground="White"
                        Text="Date: N/A" />
                    <TextBlock
                        x:Name="LastSundayMen"
                        Margin="0,2"
                        FontSize="12"
                        Foreground="White"
                        Text="Men: 0" />
                    <TextBlock
                        x:Name="LastSundayWomen"
                        Margin="0,2"
                        FontSize="12"
                        Foreground="White"
                        Text="Women: 0" />
                    <TextBlock
                        x:Name="LastSundayTotal"
                        Margin="0,2"
                        FontSize="12"
                        Foreground="White"
                        Text="Total: 0" />
                    <TextBlock
                        x:Name="LastSundayOffering"
                        Margin="0,2"
                        FontSize="12"
                        Foreground="White"
                        Text="Offering: 0.00" />
                </StackPanel>
            </materialDesign:Card>
        </Grid>

        <!--  Main Content  -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <!--  Attendance Chart (LiveCharts)  -->
            <materialDesign:Card
                Grid.Column="0"
                Margin="0,0,10,0"
                materialDesign:ElevationAssist.Elevation="Dp2"
                UniformCornerRadius="10">
                <StackPanel Margin="15">
                    <TextBlock
                        Margin="0,0,0,15"
                        FontSize="18"
                        FontWeight="Bold"
                        Text="Attendance Trends" />
                    <lvc:CartesianChart x:Name="AttendanceChart" Height="300" />
                </StackPanel>
            </materialDesign:Card>

            <!--  Absent Members  -->
            <materialDesign:Card
                Grid.Column="1"
                Margin="0"
                materialDesign:ElevationAssist.Elevation="Dp2"
                UniformCornerRadius="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Margin="15,15,15,10"
                        FontSize="18"
                        FontWeight="Bold"
                        Text="Absent for 2+ Weeks" />

                    <ListView
                        x:Name="AbsentMembersList"
                        Grid.Row="1"
                        Margin="15,0,15,15">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn
                                    Width="150"
                                    DisplayMemberBinding="{Binding FullName}"
                                    Header="Name" />
                                <GridViewColumn Width="100" Header="Last Attended">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding LastAttendanceDate, StringFormat='dd/MM/yyyy'}" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn
                                    Width="120"
                                    DisplayMemberBinding="{Binding PhoneNumber}"
                                    Header="Phone Number" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </materialDesign:Card>
        </Grid>
    </Grid>
</UserControl>