<Window
    x:Class="AccraRoadAttendance.Views.SplashScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AccraRoadAttendance.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:svg="http://sharpvectors.codeplex.com/svgc/"
    Title="SplashScreen"
    Width="950"
    Height="450"
    AllowsTransparency="True"
    Background="{x:Null}"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Border
        Margin="25"
        Background="White"
        BorderBrush="#FF9E9E9E"
        BorderThickness="1"
        CornerRadius="15"
        SnapsToDevicePixels="True">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="600" />
                <ColumnDefinition Width="250" />
            </Grid.ColumnDefinitions>

            <StackPanel
                Grid.Column="0"
                Margin="50,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center">

                <StackPanel
                    Width="500"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <!--  Adjusting the size of the church logo to make it more visible  -->
                    <svg:SvgViewbox
                        Width="110"
                        Height="75"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Source="pack://application:,,,/AppImages/Logo.png" />
                    <StackPanel Margin="15,0,0,0">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="28"
                            FontWeight="Bold"
                            Text="Accra-Road Church of Christ" />
                        <TextBlock
                            Margin="0,0,0,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="28"
                            FontWeight="Bold"
                            Text="Kasoa." />
                    </StackPanel>
                </StackPanel>

                <TextBlock
                    Margin="0,30,0,15"
                    HorizontalAlignment="Center"
                    FontSize="17"
                    FontWeight="SemiBold"
                    Text="Loading Resources.." />
                <ProgressBar
                    Name="progressBar"
                    Width="280"
                    Height="6"
                    HorizontalAlignment="Center"
                    IsIndeterminate="True"
                    Value="0" />
            </StackPanel>

            <StackPanel
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <!--  Increasing the size of attendance.svg for better visibility  -->
                <svg:SvgViewbox
                    Width="350"
                    Height="350"
                    Source="pack://application:,,,/AppImages/attendance.svg" />
                <!--  Adjusted height to maintain aspect ratio  -->
            </StackPanel>
        </Grid>

    </Border>

</Window>