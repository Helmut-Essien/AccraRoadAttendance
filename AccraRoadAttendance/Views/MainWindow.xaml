<Window
    x:Class="AccraRoadAttendance.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Main Window"
    Width="1200"
    Height="800"
    AllowsTransparency="True"
    Background="{x:Null}"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <!--  Main Card  -->
        <materialDesign:Card
            Margin="20"
            materialDesign:ElevationAssist.Elevation="Dp4"
            Background="{DynamicResource MaterialDesignPaper}"
            UniformCornerRadius="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackPanel
                    Width="200"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Stretch"
                    Background="{DynamicResource MaterialDesignDrawerBackground}">
                    <Image
                        Height="100"
                        Margin="20"
                        HorizontalAlignment="Center"
                        Source="pack://application:,,,/AccraRoadAttendance;component/AppImages/CLogoc.png" />

                </StackPanel>



                <Border
                    Grid.Row="1"
                    Background="#623ed0"
                    CornerRadius="0 50 0 30">
                    <!--  Side Navigation  -->
                    <StackPanel
                        Width="200"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Stretch"
                        Background="{DynamicResource MaterialDesignDrawerBackground}">
                        <!--  Logo  -->

                        <!--  Navigation Buttons  -->
                        <Button
                            Height="50"
                            Margin="10"
                            Click="Navigate"
                            CommandParameter="Dashboard"
                            Style="{StaticResource MaterialDesignFlatButton}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon
                                    Width="24"
                                    Height="24"
                                    Margin="0,0,10,0"
                                    Foreground="White"
                                    Kind="ViewDashboard" />
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Foreground="White"
                                    Text="Dashboard" />
                            </StackPanel>
                        </Button>
                        <Button
                            Height="50"
                            Margin="10"
                            Click="Navigate"
                            CommandParameter="MarkAttendance"
                            Style="{StaticResource MaterialDesignFlatButton}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon
                                    Width="24"
                                    Height="24"
                                    Margin="0,0,10,0"
                                    Foreground="White"
                                    Kind="ClipboardCheck" />
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Foreground="White"
                                    Text="Mark Attendance" />
                            </StackPanel>
                        </Button>
                        <Button
                            Height="50"
                            Margin="10"
                            Click="Navigate"
                            CommandParameter="Reports"
                            Style="{StaticResource MaterialDesignFlatButton}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon
                                    Width="24"
                                    Height="24"
                                    Margin="0,0,10,0"
                                    Foreground="White"
                                    Kind="ChartBar" />
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Foreground="White"
                                    Text="Reports" />
                            </StackPanel>
                        </Button>
                        <Button
                            Height="50"
                            Margin="10"
                            Click="Navigate"
                            CommandParameter="Settings"
                            Style="{StaticResource MaterialDesignFlatButton}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon
                                    Width="24"
                                    Height="24"
                                    Margin="0,0,10,0"
                                    Foreground="White"
                                    Kind="Cog" />
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Foreground="White"
                                    Text="Settings" />
                            </StackPanel>
                        </Button>
                        <Button
                            Height="50"
                            Margin="10"
                            Click="ExitApp"
                            Style="{StaticResource MaterialDesignFlatButton}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon
                                    Width="24"
                                    Height="24"
                                    Margin="0,0,10,0"
                                    Foreground="White"
                                    Kind="ExitToApp" />
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Foreground="White"
                                    Text="Exit" />
                            </StackPanel>
                        </Button>
                    </StackPanel>

                </Border>

                <!--  Main Content Area  -->
                <Grid Margin="270,20,20,20">
                    <!--  Header  -->
                    <DockPanel Height="60" LastChildFill="True">
                        <TextBlock
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            DockPanel.Dock="Left"
                            FontSize="24"
                            FontWeight="Bold"
                            Foreground="{DynamicResource MaterialDesignBody}"
                            Text="Attendance Management System" />
                        <materialDesign:PopupBox
                            Height="25"
                            HorizontalAlignment="Right"
                            DockPanel.Dock="Right"
                            PlacementMode="BottomAndAlignRightEdges"
                            StaysOpen="False">
                            <StackPanel>
                                <Button>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Dark Mode" />
                                        <ToggleButton
                                            x:Name="themeToggle"
                                            Margin="12,0,8,0"
                                            Click="ToggleTheme"
                                            IsChecked="{Binding IsDarkTheme}" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </materialDesign:PopupBox>
                    </DockPanel>

                    <!--  ContentControl  -->
                    <ContentControl
                        x:Name="MainContent"
                        Margin="10,80,10,10"
                        Background="{DynamicResource MaterialDesignBackground}" />
                </Grid>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Window>
