<Window
    x:Class="AccraRoadAttendance.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:AccraRoadAttendance.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AccraRoadAttendance"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:AccraRoadAttendance.ViewModels"
    Title="Accra Road Attendance System"
    Width="800"
    Height="450"
    Background="#1A1A1D"
    mc:Ignorable="d">

    <Window.DataContext>
        <viewModels:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <converters:PresenceToButtonTextConverter x:Key="PresenceToButtonTextConverter" />
        <converters:PresenceToButtonColorConverter x:Key="PresenceToButtonColorConverter" />
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="183*" />
            <ColumnDefinition Width="17*" />
        </Grid.ColumnDefinitions>
        <!--  Header  -->
        <Border
            Grid.ColumnSpan="2"
            Height="60"
            Background="#2E86AB">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontFamily="Segoe UI Light"
                FontSize="20"
                Foreground="White"
                Text="Accra Road Attendance System" />
        </Border>

        <!--  Main Content  -->
        <Grid Grid.ColumnSpan="2" Margin="10,70,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Search Bar  -->
            <TextBox
                x:Name="SearchBox"
                Grid.Row="0"
                Margin="0,0,0,10"
                Background="#333"
                BorderBrush="#555"
                BorderThickness="1"
                FontSize="16"
                Foreground="White"
                Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}">
                <TextBox.Resources>
                    <Style TargetType="{x:Type TextBox}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type TextBox}">
                                    <Grid>
                                        <Border
                                            x:Name="Border"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}">
                                            <ScrollViewer x:Name="PART_ContentHost" />
                                        </Border>
                                        <TextBlock
                                            x:Name="PlaceholderText"
                                            Margin="5"
                                            VerticalAlignment="Center"
                                            Foreground="#AAA"
                                            Text="Search members..."
                                            Visibility="Collapsed" />
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="Text" Value="">
                                            <Setter TargetName="PlaceholderText" Property="Visibility" Value="Visible" />
                                        </Trigger>
                                        <Trigger Property="IsKeyboardFocused" Value="True">
                                            <Setter TargetName="PlaceholderText" Property="Visibility" Value="Collapsed" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <!--  Member List  -->
            <ListView
                x:Name="MemberList"
                Grid.Row="1"
                Background="#1A1A1D"
                BorderThickness="0"
                Foreground="White"
                ItemsSource="{Binding Members}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <!--  Member Picture  -->
                            <Image
                                Width="40"
                                Height="40"
                                Margin="5"
                                Source="{Binding PicturePath}" />
                            <!--  Member Name and Sex  -->
                            <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                <TextBlock FontSize="16" Text="{Binding Name}" />
                                <TextBlock
                                    FontSize="12"
                                    Foreground="#AAA"
                                    Text="{Binding Sex}" />
                            </StackPanel>
                            <!--  Check In/Out Button  -->
                            <Button
                                Grid.Column="2"
                                Margin="5"
                                Background="{Binding IsPresent, Converter={StaticResource PresenceToButtonColorConverter}}"
                                BorderThickness="0"
                                Command="{Binding DataContext.TogglePresenceCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                CommandParameter="{Binding}"
                                Content="{Binding IsPresent, Converter={StaticResource PresenceToButtonTextConverter}}"
                                Foreground="White" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!--  Action Buttons  -->
            <StackPanel
                Grid.Row="2"
                Margin="0,10,0,0"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    Margin="0,0,5,0"
                    Background="#2E86AB"
                    BorderThickness="0"
                    Command="{Binding AddMemberCommand}"
                    Content="Add Member"
                    Foreground="White" />
                <Button
                    Margin="5,0,0,0"
                    Background="#2E86AB"
                    BorderThickness="0"
                    Command="{Binding GenerateReportCommand}"
                    Content="Generate Report"
                    Foreground="White" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>